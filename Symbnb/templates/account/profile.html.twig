{% extends 'base.html.twig' %}

{% block title %}Edit your profile {% endblock %}

{% block body %}

<div class="container ">
    <h1 class="my-2"> Modify your Profile </h1>
    
    {{ form_start(form) }}
    <div class="row">
        <div class="col">
            <div class="alert alert-light">
                <h2 class="alert-heading"> General Information</h2>
                <hr>
                {{ form_row(form.firstName) }}
                {{ form_row(form.lastName) }}
                {{ form_row(form.email) }}
                {{ form_row(form.picture) }}
            </div>
        </div>
        <div class="col">
            <div class="alert alert-light clearfix">
                <h2 class="alert-heading"> Details</h2>
                <hr>
                {{ form_row(form.introduction) }}
                {{ form_row(form.description | raw ) }}
                <hr>
                <p>If you finish your modifications, you can : </p>
                <button type="submit" class="btn btn-primary float-right">
                    <i class="fas fa-save"></i>
                     Save your changes 
                </button>
            </div>
        </div>
    </div> 
    {{ form_end(form) }}
</div>

{% endblock %}