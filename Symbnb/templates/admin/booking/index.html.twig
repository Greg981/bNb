{% extends 'admin/adminBase.html.twig' %}

{% block title %}Bookings Admin dashboard!{% endblock %}

{% block body %}
<div class="container-fluid">
    <h1 class="my-3">Manage Bookings âœ…</h1>
    <table class="table table-hover">
        <thead>
            <tr>
                <th>Id</th>
                <th>Date</th>
                <th>Guest</th>
                <th>Ad Title</th>
                <th>Duration</th>
                <th>Price</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            {% for booking in pagination.data %}  
            <tr>
                <td>{{booking.id}}</td>
                <td>{{booking.createdAt | date('d/m/Y H:i')}}</td>
                <td><img src="{{booking.booker.picture}}" alt="Avatar of {{booking.booker.fullname}}"
                class="avatar avatar-mini mr-2">
                {{booking.booker.fullName}}
                </td>
                <td>{{ booking.ad.title }}</td>
                <td> {{ booking.duration }}</td>
                <td>{{ booking.amount| number_format(2, ',', ' ')}} &euro;</td>   
                <td>
                    <a href="{{ path('admin_booking_edit', {'id': booking.id}) }}" class="btn btn-primary my-1"><i class="fas fa-edit"></i></a>
                    <a href="{{ path('admin_booking_delete', {'id': booking.id}) }}" class="btn btn-danger my-1"><i class="fas fa-trash"></i></a>
                </td>
            </tr>
            {% endfor %}
        </tbody>
    </table>
    <div class="d-flex justify-content-center">
    {% set page = pagination.page %}
    {% set pages = pagination.pages %}

        <ul class="pagination">
            <li class="page-item {% if page == 1 %}disabled{% endif %}">
                <a class="page-link" href="{{path('admin_booking_index', {'page': page - 1}) }}">&laquo;</a>
            </li>
            {% for i in 1..pages %}
            <li class="page-item {% if page == i %} active{% endif %}">
                <a class="page-link" href="{{ path('admin_booking_index', {'page': i}) }}">{{ i }}</a>
            </li>       
            {% endfor %}
            <li class="page-item {% if page == pages %}disabled{% endif %}">
                <a class="page-link" href="{{ path('admin_booking_index', {'page': page + 1}) }}">&raquo;</a>
            </li>
        </ul>
    </div>
</div>


{% endblock %}
