{% extends 'admin/adminBase.html.twig' %}

{% block title %}Admin modify comment n# : {{comment.id}} {% endblock %}

{% block body %}
<div class="container">
    <h2 class="mb-3">Admin Comment Modify : {{comment.id}} </h2>

    <div class="alert alert-info">
        <strong> Linked to :</strong> {{comment.ad.title}} </br>
        <strong> Author :</strong> {{comment.author.fullName}}</br>
        <strong> Created at :</strong> {{comment.createdAt | date('d/m/Y H:i') }}</br>
        <strong> Rated :</strong> {{comment.rating }}
    </div>
        {{ form_start(form) }}
          
        {{ form_widget(form) }}

        <button type="submit" class="btn btn-primary">
        <i class="fas fa-check"></i>
         Save change 
        </button>

        {{ form_end(form) }}
   
</div>

{% endblock %}
